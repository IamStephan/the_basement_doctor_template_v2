{
  "name": "the_basement_doctor_template",
  "version": "1.0.0",
  "description": "Template for the basement doctor website",
  "main": "index.js",
  "author": "Stephan Burger",
  "license": "MIT",
  "scripts": {
    "postcss:watch": "postcss src/styles/global/index.pcss -o src/styles/global/index.css --env development -w",
    "postcss:build": "postcss src/styles/global/index.pcss -o src/styles/global/index.css --env production",
    "parcel:serve": "parcel serve src/pages/*.html",
    "parcel:watch": "parcel watch src/pages/*.html",
    "parcel:build": "parcel build src/pages/*.html",
    "clean": "rm -rf dist .parcel-cache",
    "build": "npm-run-all -s clean postcss:build parcel:build",
    "start": "npm-run-all -s clean -p postcss:watch parcel:serve"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "autoprefixer": "^10.2.6",
    "cssnano": "^5.0.5",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.2",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "posthtml-beautify": "^0.7.0",
    "posthtml-expressions": "^1.7.1",
    "posthtml-include": "^1.7.1",
    "posthtml-load-config": "^2.0.0",
    "sass": "^1.34.1",
    "tailwindcss": "^2.1.4"
  }
}
